<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_areyouteacheror_studentstudent"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="8dp"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="8dp"
    tools:context="com.arunsudharsan.eecnotesforyou.AreyouteacherorStudent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_teacher"
            card_view:cardBackgroundColor="@color/cardviewbgcolor"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            android:layout_width="match_parent"

            android:layout_height="100dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="fill_parent"

                android:layout_height="fill_parent"
                android:layout_margin="5dp">

                <RadioButton
                    android:id="@+id/cb_Teacher"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/iconteacher"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Teacher"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_student"
            card_view:cardBackgroundColor="@color/cardviewbgcolor"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="fill_parent"

                android:layout_height="fill_parent"
                android:layout_margin="5dp">

                <RadioButton
                    android:id="@+id/cb_Student"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/iconstudent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Student"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_proceed"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:padding="10dp"
            android:text="Let's Go!" />
    </LinearLayout>

</RelativeLayout>
